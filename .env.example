# Application
APP_NAME=customer-support-api
APP_VERSION=1.0.0
DEBUG=false
ENVIRONMENT=production

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/customer_support
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=0

# AI/ML Configuration
# Option 1: OpenAI
OPENAI_API_KEY=your-openai-api-key
AI_MODEL=gpt-4o

# Option 2: HuggingFace (if using open-source models)
# HUGGINGFACE_API_KEY=your-huggingface-api-key
# AI_MODEL=bert-base-uncased

# API Configuration
API_V1_PREFIX=/api/v1
CORS_ORIGINS=["http://localhost:3000"]
SECRET_KEY=your-secret-key-here
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# HuggingFace Dataset
DATASET_NAME=Tobi-Bueck/customer-support-tickets
DATASET_CACHE_DIR=./data/cache